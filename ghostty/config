# Ghostty Config

# Theme
theme = Catppuccin Mocha

# Font
font-size = 21
font-thicken = true
font-family = CaskaydiaCove Nerd Font
font-feature = "+calt,+dlig,+liga,+ss01,+ss02,+ss03"

# Cursor
cursor-style = block
cursor-style-blink = false
cursor-opacity = 0.4

# Window
window-decoration = true
background-blur-radius = 30
macos-titlebar-style = hidden
gtk-titlebar = false

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-trim-trailing-spaces = true

# Shell
shell-integration = zsh
shell-integration-features = no-cursor,sudo,title

# Input
macos-option-as-alt = true
mouse-hide-while-typing = true
custom-shader-animation = always

# Tmux keybinds - Go to window N (Ctrl+Space + N)
keybind = super+Digit1=text:\x00\x31
keybind = super+Digit2=text:\x00\x32
keybind = super+Digit3=text:\x00\x33
keybind = super+Digit4=text:\x00\x34
keybind = super+Digit5=text:\x00\x35
keybind = super+Digit6=text:\x00\x36
keybind = super+Digit7=text:\x00\x37
keybind = super+Digit8=text:\x00\x38
keybind = super+Digit9=text:\x00\x39

# Tmux keybinds - Window management
keybind = super+t=text:\x00\x63  # New window (Ctrl+Space+c)
keybind = super+p=text:\x00\x77  # Switch window via fzf (Ctrl+Space+w)
keybind = super+r=text:\x00\x2c  # Rename window (Ctrl+Space+,)
keybind = super+w=text:\x00\x78  # Close pane (Ctrl+Space+x)
keybind = super+h=text:\x00\x70  # Previous window (Ctrl+Space+p)
keybind = super+l=text:\x00\x6e  # Next window (Ctrl+Space+n)
keybind = super+z=text:\x00\x7a  # Toggle zoom (Ctrl+Space+z)

keybind = shift+enter=text:\n
