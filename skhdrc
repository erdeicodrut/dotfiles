# open terminal
cmd - return : open -na Ghostty 

cmd + alt - return : yabai -m window --focus $(yabai -m query --windows | jq '.[] | select(.app == "Ghostty") | .id' | head -n 1)


# moves focus between windows in the current focused display
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# moves focus between spaces 
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0  : yabai -m space --focus 10

# alias 
alt - q : yabai -m space --focus 5
alt - w : yabai -m space --focus 6
alt - e : yabai -m space --focus 7
alt - r : yabai -m space --focus 8
alt - a : yabai -m space --focus 1
alt - s : yabai -m space --focus 2
alt - d : yabai -m space --focus 3
alt - f : yabai -m space --focus 4
alt - z : yabai -m space --focus 9
# alt - x  : yabai -m space --focus 10
# alt - c  : yabai -m space --focus 11
# alt - v  : yabai -m space --focus 12
# alt - b  : yabai -m space --focus 13

# toggle window split type
ctrl + alt - e : yabai -m window --toggle split

# mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# float / unfloat window and center on screen
ctrl + alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2


# balance size of windows
shift + alt - 0 : yabai -m space --balance

# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# send window to a space 
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9
shift + alt - 0 : yabai -m window --space 10

# send window to a space 
shift + alt - q : yabai -m window --space 5
shift + alt - w : yabai -m window --space 6
shift + alt - e : yabai -m window --space 7
shift + alt - r : yabai -m window --space 8
shift + alt - a : yabai -m window --space 1
shift + alt - s : yabai -m window --space 2
shift + alt - d : yabai -m window --space 3
shift + alt - f : yabai -m window --space 4
shift + alt - z : yabai -m window --space 9
# shift + alt - x : yabai -m window --space 10
# shift + alt - c : yabai -m window --space 11
# shift + alt - v : yabai -m window --space 12
# shift + alt - b : yabai -m window --space 13

# change window size
alt - 0x1B : yabai -m window --resize right:-40:0 2> /dev/null || yabai -m window --resize left:-40:0 2> /dev/null
shift + alt - j : yabai -m window --resize bottom:0:40 2> /dev/null || yabai -m window --resize top:0:40 2> /dev/null
shift + alt - k : yabai -m window --resize bottom:0:-40 2> /dev/null || yabai -m window --resize top:0:-40 2> /dev/null
alt - 0x18 : yabai -m window --resize right:40:0 2> /dev/null || yabai -m window --resize left:40:0 2> /dev/null

# restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

ctrl - f : yabai -m window --toggle zoom-fullscreen

# ctrl - t : yabai -m space --toggle padding; yabai -m space --toggle gap

ctrl - g : /Users/codrut/.config/yabai/toggle_padding 20%

